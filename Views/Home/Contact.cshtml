@model Iletisim


<div class="content-contact flex-items">
    <div class="row content-inside">
        <div class="col-lg-6 col-12">
            <form asp-controller="Iletisim" asp-acrion="Contact" method="post" class="bg-primary p-3 rounded-2 text-white">
                <div class="row g-3">
                    <div class="col-sm-6 col-12">
                        <label asp-for="Mail" class="form-label">Email</label>
                        <input asp-for="Mail" class="form-control" type="email" />
                    </div>
                    <div class="col-sm-6 col-12">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" type="text" />
                    </div>
                    <div class="col-sm-6 col-12">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" type="tel" />
                    </div>
                    <div class="col-sm-6 col-12">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" type="text" />
                    </div>
                    <div class="col-12">
                        <label asp-for="Adress" class="form-label">Adres</label>
                        <textarea asp-for="Adress" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="col-12 d-grid">
                        <input type="submit" class="btn btn-outline-warning" value="Send Message" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-6 col-12 mt-3 mt-lg-0">
            <iframe class="rounded-2 border p-1 w-100"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12029.23116900144!2d29.02509236310419!3d41.084121165146335!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab605ecb18f53%3A0x7b69efd8c9f91bce!2zRXRpbGVyLCAzNDMzNyBCZcWfaWt0YcWfL8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1695487883253!5m2!1str!2str"
                height="375" style="border: 0" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>

</div>
</Contact>